# Python Variabls
export PYTHONPATH=

# Maven Variables
export M2_HOME=/opt/homebrew/bin
export MAVEN_OPTS="-Xms256m -Xmx512m"
export PATH=${M2_HOME}/bin:${PATH}

# Java Variables
export JDK_HOME=/Library/Java/JavaVirtualMachines/jdk-20.jdk
export JAVA_HOME=$(/usr/libexec/java_home)
export PATH=${JDK_HOME}/bin:${PATH}

# Terraform Variables
TF_WORKSPACE_DEV=dev
TF_WORKSPACE_STG=stg
TF_WORKSPACE_PRD=prd

export TF_WORKSPACE=${TF_WORKSPACE_DEV}

# AWS Vault Variables
export AWS_VAULT_BACKEND=keychain

# AWS Variables
AWS_REGION_PRIMARY=ca-central-1
AWS_REGION_DR=eu-west-1

export AWS_REGION=${AWS_REGION_PRIMARY}

# GIT Variables
export GIT_HOSTS=()
export GIT_EMAILS=()
export GIT_SSH_KEYS=()
export GIT_REPO_DIRS=()

# Personal Variables
export KEYCHAINS=()

# Terminal Variables - History
export HISTSIZE=10000
export SAVEHIST=10000
export HISTFILE=~/.zshistory
setopt INC_APPEND_HISTORY
setopt HIST_IGNORE_DUPS
setopt EXTENDED_HISTORY

# Terminal Variables - Colors
export CLICOLOR=1
export GREEN="\033[0;32m"
export RED="\033[0;31m"
export WHITE="\033[0;29m"
export YELLOW="\033[0;33m"

# Terminal Variables - Prompt
autoload -Uz vcs_info
precmd() { vcs_info }
zstyle ':vcs_info:git:*' formats '%F{white}[%F{yellow}%b%F{white}]'

setopt PROMPT_SUBST
export PROMPT='%F{white}[%F{red}%n%F{white}:%F{red}%m%F{white}][%F{green}%~%F{white}]%F{yellow}${vcs_info_msg_0_}%F{white}
$ '

# Terminal Variables - Path
export PATH="${HOMEBREW_PREFIX}/opt/openssl/bin:${PATH}"
